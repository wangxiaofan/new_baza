<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cl_msg_sys"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingTop="10dp"
    android:paddingRight="15dp">

    <ImageView
        android:id="@+id/conversation_notification_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_gongdanxiaoxi" />

    <TextView
        android:id="@+id/conversation_notification_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/conversation_notification_icon"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/conversation_notification_icon"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="系统通知"
        android:textColor="#0D315C"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/conversation_notification_last_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/conversation_notification_title"
        android:layout_alignBottom="@+id/conversation_notification_icon"
        android:layout_toRightOf="@+id/conversation_notification_icon"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="即时消息"
        android:textColor="#888888"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/conversation_notification_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/conversation_title"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="00:00"
        android:textColor="#888888"
        android:textSize="10sp"
        android:visibility="gone" />


    <com.tencent.qcloud.tim.uikit.component.UnreadCountTextView
        android:id="@+id/conversation_notification_time_unread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/conversation_notification_icon"
        android:layout_marginLeft="-15dp"
        android:layout_toRightOf="@+id/conversation_notification_icon"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="#fff"
        android:textSize="10sp"
        android:visibility="gone" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_below="@+id/conversation_notification_icon"
        android:layout_marginTop="10dp"
        android:background="#EEEEEE" />

</RelativeLayout>