<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/group_chat_second_rel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/group_chat_second_iv"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_centerVertical="true"
        android:src="@drawable/btn_kuangxuan_nor" />


    <ImageView
        android:id="@+id/group_chat_second_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/group_chat_second_iv" />

    <TextView
        android:id="@+id/group_chat_second_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/group_chat_second_icon"
        android:layout_marginLeft="13.5dp"
        android:layout_marginRight="40dp"
        android:layout_toRightOf="@+id/group_chat_second_icon"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#0D315C"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/group_chat_second_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/group_chat_second_name"
        android:layout_alignBottom="@+id/group_chat_second_icon"
        android:layout_marginRight="40dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#888888"
        android:textSize="12sp" />
</RelativeLayout>
