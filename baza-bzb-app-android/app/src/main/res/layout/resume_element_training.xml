<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_training_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_black_4E5968"
        android:textSize="@dimen/text_size_10" />

    <TextView
        android:id="@+id/tv_training_organization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:textColor="@color/text_color_blue_0D315C"
        android:textSize="@dimen/text_size_11" />

    <TextView
        android:id="@+id/tv_training_location_and_certification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:textColor="@color/text_color_blue_0D315C"
        android:textSize="@dimen/text_size_11" />

    <TextView
        android:id="@+id/tv_training_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:lineSpacingExtra="@dimen/dp_5"
        android:textColor="@color/text_color_black_4E5968"
        android:textSize="@dimen/text_size_11" />
</LinearLayout>