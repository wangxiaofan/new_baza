<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_easy_chose_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="@string/easy_to_select_update_resume"
        android:textColor="@color/text_color_grey_9E9E9E"
        android:textSize="@dimen/text_size_13"
        android:visibility="gone" />

    <include
        android:id="@+id/view_label_tips"
        layout="@layout/layout_enable_update_list_easy_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:visibility="gone" />

    <include
        android:id="@+id/view_job_tips"
        layout="@layout/layout_enable_update_list_easy_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_search_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/text_color_grey_9E9E9E"
        android:textSize="@dimen/text_size_13" />

</LinearLayout>

