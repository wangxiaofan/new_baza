<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_chat_depart_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_background_sys_msg_depart_time"
        android:paddingBottom="@dimen/dp_5"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="@dimen/dp_5"
        android:textColor="@color/text_color_grey_94A1A5"
        android:textSize="@dimen/text_size_9" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/message_wait_process_item_bg"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_color_blue_0D315C"
            android:textSize="@dimen/text_size_13" />

        <TextView
            android:id="@+id/tv_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/text_color_black_4E5968"
            android:textSize="@dimen/text_size_11" />

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/background_main" />

        <TextView
            android:id="@+id/tv_process"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/push_clickable_title_default"
            android:textColor="@color/text_color_blue_53ABD5"
            android:textSize="@dimen/text_size_11" />
    </LinearLayout>


</LinearLayout>