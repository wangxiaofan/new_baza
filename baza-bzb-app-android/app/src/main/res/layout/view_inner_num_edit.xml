<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/right_center_area_bg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_minus"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:src="@drawable/account_ic_minus" />


    <TextView
        android:id="@+id/tv_count_value"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/right_center_num_bg"
        android:gravity="center"
        android:textColor="@color/text_color_black_4A4A4A"
        android:textSize="@dimen/text_size_14" />

    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:src="@drawable/account_ic_add" />
</LinearLayout>