<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:clickable="true"
    android:padding="@dimen/dp_10">

    <TextView
        android:id="@+id/tv_title_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_recommend_warn"
        android:drawablePadding="@dimen/dp_5"
        android:text="@string/recommend_content"
        android:textColor="@color/text_color_black_333333"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_recommend_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="top"
        android:hint="@string/recommend_content_hint"
        android:maxLength="50"
        android:maxLines="3"
        android:minLines="3"
        android:paddingTop="@dimen/dp_10"
        android:textColor="@color/text_color_black_333333"
        android:textColorHint="@color/text_color_gray_a9adb3"
        android:textCursorDrawable="@drawable/edit_text_default_cursor"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_content" />

    <com.baza.android.bzw.widget.LineBreakLayout
        android:id="@+id/lbl_default_content_tag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:horizontalDepart="@dimen/dp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_recommend_content"
        app:verticalDepart="@dimen/dp_15" />

    <View
        android:id="@+id/view_line_1"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/background_main"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lbl_default_content_tag" />

    <TextView
        android:id="@+id/tv_title_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:drawableLeft="@drawable/icon_recommend_warn"
        android:drawablePadding="@dimen/dp_5"
        android:text="@string/recommend_time"
        android:textColor="@color/text_color_black_333333"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_line_1" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|right"
        android:textColor="@color/text_color_black_4E5968"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintBottom_toBottomOf="@id/tv_title_time"
        app:layout_constraintLeft_toRightOf="@id/tv_title_time"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_title_time" />

    <View
        android:id="@+id/view_line_2"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/background_main"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/recommend_content_hint2"
        android:textColor="@color/text_color_gray_a9adb3"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_line_2" />

    <TextView
        android:id="@+id/tv_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:text="@string/save"
        android:textColor="@color/text_color_blue_0D315C"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_line_2" />

</androidx.constraintlayout.widget.ConstraintLayout>