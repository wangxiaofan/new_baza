<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_parent_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_line_blue"
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:drawablePadding="@dimen/dp_5"
        android:textColor="@color/text_color_blue_0D315C"
        android:textSize="@dimen/text_size_14" />

    <com.baza.android.bzw.widget.LineBreakLayout
        android:id="@+id/lbl_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:horizontalDepart="@dimen/dp_10"
        app:verticalDepart="@dimen/dp_10" />
</LinearLayout>