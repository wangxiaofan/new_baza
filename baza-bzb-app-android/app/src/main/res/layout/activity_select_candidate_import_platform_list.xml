    <TextView
        android:id="@+id/tv_from_pc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/selector_background_click_default_with_bottom_line"
        android:drawableLeft="@drawable/icon_platform_pc"
        android:drawableRight="@drawable/icon_arrow_gray_next"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center_vertical"
        android:onClick="onClick"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:text="@string/from_pc"
        android:textColor="@color/text_color_blue_0D315C"
        android:textSize="@dimen/text_size_14" />

    <TextView
        android:id="@+id/tv_from_web"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/selector_background_click_default_with_bottom_line"
        android:drawableLeft="@drawable/icon_platform_web"
        android:drawableRight="@drawable/icon_arrow_gray_next"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center_vertical"
        android:onClick="onClick"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:text="@string/from_web"
        android:textColor="@color/text_color_blue_0D315C"
        android:textSize="@dimen/text_size_14" />

    <TextView
        android:id="@+id/tv_sync_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:onClick="onClick"
        android:layout_margin="@dimen/dp_15"
        android:text="@string/sync_resume_to_get_more"
        android:textColor="@color/text_color_grey_94A1A5"
        android:textSize="@dimen/text_size_10" />

    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_copy_link"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/copy_download_url_to_email"
        android:textColor="@drawable/text_color_selector_orange_gray"
        android:textSize="@dimen/text_size_14"
        android:visibility="gone" />
</LinearLayout>