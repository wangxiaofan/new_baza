<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_title_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/new_search_filter_ui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_height"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_30"
                android:layout_weight="1"
                android:background="@drawable/round_conner_shape_gray"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_filter_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/name_list_ic_menu_drop_down"
                    android:drawablePadding="@dimen/dp_5"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="全国"
                    android:textColor="#94A1A5"
                    android:textSize="13sp" />

                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:background="#94A1A5" />

                <TextView
                    android:id="@+id/tv_do_search"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/default_edit_text_height"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="输入关键字、搜索云端人才"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_5"
                    android:textColor="@color/text_color_blue_0D315C"
                    android:textColorHint="@color/text_color_grey_94A1A5"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_cancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="取消"
                android:textColor="@color/text_color_blue_0D315C"
                android:textSize="15sp" />
        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/hsv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:orientation="horizontal"
                android:paddingRight="@dimen/dp_18">

                <TextView
                    android:id="@+id/tv_filter_all"
                    style="@style/company_resume_filter_title_text"
                    android:drawableRight="@drawable/name_list_ic_menu_drop_down"
                    android:text="综合排序" />

                <TextView
                    android:id="@+id/tv_filter_years"
                    style="@style/company_resume_filter_title_text"
                    android:drawableRight="@drawable/name_list_ic_menu_drop_down"
                    android:text="工作年限" />

                <TextView
                    android:id="@+id/tv_filter_degree"
                    style="@style/company_resume_filter_title_text"
                    android:drawableRight="@drawable/name_list_ic_menu_drop_down"
                    android:text="学历" />

                <TextView
                    android:id="@+id/tv_filter_flag"
                    style="@style/company_resume_filter_title_text"
                    android:drawableRight="@drawable/name_list_ic_menu_drop_down"
                    android:text="标签" />

                <TextView
                    android:id="@+id/tv_filter_major"
                    style="@style/company_resume_filter_title_text"
                    android:drawableRight="@drawable/name_list_ic_menu_drop_down"
                    android:text="职位名称" />

                <TextView
                    android:id="@+id/tv_filter_company"
                    style="@style/company_resume_filter_title_text"
                    android:drawableRight="@drawable/name_list_ic_menu_drop_down"
                    android:text="公司" />

            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_point_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/filter_bottom_point_long" />

            <ImageView
                android:id="@+id/iv_point_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_2"
                android:background="@drawable/filter_bottom_point_short" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/name_list_advance_filter_shadow" />
    </LinearLayout>

</LinearLayout>