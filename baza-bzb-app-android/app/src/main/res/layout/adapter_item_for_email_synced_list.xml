<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_background_click_default_with_bottom_line"
        android:orientation="horizontal"
        android:padding="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dp_5"
            android:textColor="@color/text_color_blue_0D315C"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:textColor="@color/text_color_orange_FF7700"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_extra_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/background_main"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_lastSyncTime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/text_color_black_4E5968"
            android:textSize="@dimen/text_size_10" />

        <TextView
            android:id="@+id/tv_operate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:textColor="@color/text_color_blue_53ABD5"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>

</LinearLayout>

