<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_bar_default_left_imageview" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:drawablePadding="30dp"
        android:drawableTop="@drawable/icon_send_email_success"
        android:gravity="center"
        android:text="@string/email_send_success"
        android:textColor="@color/text_color_black_4A4A4A"
        android:textSize="@dimen/text_size_15" />

    <Button
        android:id="@+id/btn_write_another"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/login_login_btn_bg"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/write_another"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_15" />
</LinearLayout>