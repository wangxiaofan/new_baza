<?xml version="1.0" encoding="utf-8"?>
<com.handmark.pulltorefresh.library.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/view_resume_ele_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selector_background_click_default_with_bottom_line"
        android:paddingBottom="@dimen/dp_15">

        <CheckBox
            android:id="@+id/cb_to_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableLeft="@drawable/checker_update_content"
            android:paddingBottom="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@id/view_resume_ele_hunter_job"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/icon_inf_find_job"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@id/view_resume_ele_real_name"
            style="@style/style_resume_ele_real_name"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            app:layout_constraintLeft_toRightOf="@id/cb_to_group"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@id/view_resume_ele_operator"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/name_list_update_btn_bg"
            android:gravity="center"
            android:text="@string/update"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_10"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/view_resume_ele_real_name" />

        <TextView
            android:id="@id/view_resume_ele_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_15"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxEms="5"
            android:maxLines="1"
            android:textColor="@color/text_color_black_4E5968"
            android:textSize="@dimen/text_size_12"
            app:layout_constraintBottom_toBottomOf="@id/view_resume_ele_real_name"
            app:layout_constraintLeft_toRightOf="@id/view_resume_ele_real_name"
            app:layout_constraintTop_toTopOf="@id/view_resume_ele_real_name" />

        <TextView
            android:id="@id/view_resume_ele_source_from"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/resume_text_bg_source_from"
            android:gravity="center"
            android:textColor="@color/text_color_blue_53ABD5"
            android:textSize="@dimen/text_size_10"
            app:layout_constraintBottom_toBottomOf="@id/view_resume_ele_real_name"
            app:layout_constraintLeft_toRightOf="@id/view_resume_ele_title" />


        <TextView
            android:id="@id/view_resume_ele_second_main_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/text_color_black_4E5968"
            android:textSize="@dimen/text_size_10"
            app:layout_constraintLeft_toLeftOf="@id/view_resume_ele_real_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_resume_ele_real_name" />

        <TextView
            android:id="@id/view_resume_ele_company_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:drawableLeft="@drawable/icon_company"
            android:drawablePadding="@dimen/dp_5"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/text_color_black_4E5968"
            android:textSize="@dimen/text_size_10"
            app:layout_constraintLeft_toLeftOf="@id/view_resume_ele_real_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_resume_ele_second_main_info" />

        <TextView
            android:id="@id/view_resume_ele_sub_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/text_color_black_4E5968"
            android:textSize="@dimen/text_size_10"
            app:layout_constraintLeft_toLeftOf="@id/view_resume_ele_real_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_resume_ele_company_info" />

        <!--<com.baza.android.bzw.widget.LineBreakLayout-->
        <!--android:id="@id/view_resume_ele_labels"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="@dimen/dp_5"-->
        <!--app:horizontalDepart="@dimen/dp_5"-->
        <!--app:layout_constraintLeft_toLeftOf="parent"-->
        <!--app:layout_constraintRight_toRightOf="parent"-->
        <!--app:layout_constraintTop_toBottomOf="@id/view_resume_ele_sub_info"-->
        <!--app:verticalDepart="@dimen/dp_5" />-->
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--侧滑menu-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:clickable="false"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@id/view_resume_ele_side_menu_one"
            android:layout_width="@dimen/dp_70"
            android:layout_height="match_parent"
            android:background="@color/text_color_blue_53ABD5"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10">

            <TextView
                android:id="@id/view_resume_ele_side_menu_one_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/dp_5"
                android:drawableTop="@drawable/icon_collection"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_11" />
        </FrameLayout>

        <View
            android:id="@+id/view_menu_depart"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/background_5053ABD5" />

        <FrameLayout
            android:id="@id/view_resume_ele_side_menu_two"
            android:layout_width="@dimen/dp_70"
            android:layout_height="match_parent"
            android:background="#2053ABD5"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10">

            <TextView
                android:id="@id/view_resume_ele_side_menu_one_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/dp_5"
                android:drawableTop="@drawable/icon_add_record_menu"
                android:gravity="center"
                android:text="@string/add_record"
                android:textColor="@color/text_color_blue_53ABD5"
                android:textSize="@dimen/text_size_11" />
        </FrameLayout>
    </LinearLayout>
</com.handmark.pulltorefresh.library.SwipeMenuLayout>
