<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_part_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/intentions"
            android:textColor="@color/text_color_blue_0D315C"
            android:textSize="@dimen/text_size_13" />

        <CheckBox
            android:id="@+id/cb_check_all"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@null"
            android:button="@null"
            android:drawableLeft="@drawable/checker_update_content"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_10" />
    </FrameLayout>

    <View style="@style/line_horizontal_D3D3D3" />

    <TextView
        android:id="@+id/tv_no_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_20"
        android:paddingTop="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:text="@string/message_unknown"
        android:textColor="@color/text_color_black_4E5968"
        android:textSize="@dimen/text_size_11"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/fl_intention_job"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_20">

        <TextView
            android:id="@+id/tv_intention_job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_5"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:textColor="@color/text_color_black_4E5968"
            android:textSize="@dimen/text_size_11" />

        <CheckBox
            android:id="@+id/cb_check_job"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35"
            android:layout_gravity="right"
            android:background="@null"
            android:button="@null"
            android:drawableLeft="@drawable/checker_update_content"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_10" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_intention_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_20">

        <TextView
            android:id="@+id/tv_intention_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_5"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:textColor="@color/text_color_black_4E5968"
            android:textSize="@dimen/text_size_11" />

        <CheckBox
            android:id="@+id/cb_check_city"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35"
            android:layout_gravity="right"
            android:background="@null"
            android:button="@null"
            android:drawableLeft="@drawable/checker_update_content"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_10" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_intention_salary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_20">

        <TextView
            android:id="@+id/tv_intention_salary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_5"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:textColor="@color/text_color_black_4E5968"
            android:textSize="@dimen/text_size_11" />

        <CheckBox
            android:id="@+id/cb_check_salary"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="right"
            android:background="@null"
            android:button="@null"
            android:drawableLeft="@drawable/checker_update_content"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_10" />
    </FrameLayout>
</LinearLayout>