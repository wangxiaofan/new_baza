<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_part_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/text_candidate_self_des"
            android:textColor="@color/text_color_blue_0D315C"
            android:textSize="@dimen/text_size_13" />

        <CheckBox
            android:id="@+id/cb_check_all"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@null"
            android:button="@null"
            android:drawableLeft="@drawable/checker_update_content"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_10" />
    </FrameLayout>

    <View style="@style/line_horizontal_D3D3D3" />

    <TextView
        android:id="@+id/tv_self_evaluation_current"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_20"
        android:paddingTop="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:textColor="@color/text_color_black_4E5968"
        android:textSize="@dimen/text_size_11" />

    <TextView
        android:id="@+id/tv_add_or_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:text="@string/update_item_to_2"
        android:textColor="@color/text_color_black_4E5968"
        android:textSize="@dimen/text_size_11" />

    <TextView
        android:id="@+id/tv_self_evaluation_updated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_10"
        android:textColor="@color/text_color_orange_FF7700"
        android:textSize="@dimen/text_size_11" />
</LinearLayout>