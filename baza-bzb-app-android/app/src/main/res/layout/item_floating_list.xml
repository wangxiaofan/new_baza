<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_select"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:background="@drawable/btn_weixuanze"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/resume_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_background_click_default_with_bottom_line"
        android:orientation="vertical"
        android:padding="@dimen/dp_12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                style="@style/style_resume_ele_real_name" />

            <TextView
                android:id="@+id/tv_integrity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_7"
                android:textColor="#FF7700"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_update_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_weight="1"
                android:textColor="#4E5968"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_feedback_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_7"
                android:textColor="#4E5968"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_company_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:drawableLeft="@drawable/icon_company"
            android:drawablePadding="@dimen/dp_5"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="#4E5968"
            android:textSize="@dimen/text_size_10" />

        <TextView
            android:id="@+id/tv_recommend_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:drawableLeft="@drawable/icon_tuijianren"
            android:drawablePadding="@dimen/dp_5"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="#0D315C"
            android:textSize="@dimen/text_size_10" />

        <TextView
            android:id="@+id/tv_receive_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="5dp"
            android:textColor="#0D315C"
            android:textSize="@dimen/text_size_10" />

        <LinearLayout
            android:id="@+id/ll_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_refuse"
                android:layout_width="@dimen/dp_57"
                android:layout_height="@dimen/dp_22"
                android:background="@drawable/bg_floating_list_item_btn"
                android:gravity="center"
                android:text="拒绝"
                android:textColor="@drawable/bg_floating_list_item_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_one_key"
                android:layout_width="@dimen/dp_57"
                android:layout_height="@dimen/dp_22"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/bg_floating_list_item_btn"
                android:gravity="center"
                android:text="一键offer"
                android:textColor="@drawable/bg_floating_list_item_text"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_receive"
                android:layout_width="@dimen/dp_57"
                android:layout_height="@dimen/dp_22"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/bg_floating_list_item_btn"
                android:gravity="center"
                android:text="接受"
                android:textColor="@drawable/bg_floating_list_item_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_next"
                android:layout_width="@dimen/dp_57"
                android:layout_height="@dimen/dp_22"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/bg_floating_list_item_btn"
                android:gravity="center"
                android:text="下一轮"
                android:textColor="@drawable/bg_floating_list_item_text"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>