<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center"
        android:text="@string/baza_coin_not_enough"
        android:textColor="@color/text_color_black_3D5A7D"
        android:textSize="@dimen/text_size_14" />

    <TextView
        android:id="@+id/tv_get_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:drawablePadding="@dimen/dp_5"
        android:drawableRight="@drawable/icon_arrow_orange_next"
        android:gravity="center"
        android:text="@string/benefit_get_more"
        android:textColor="@color/text_color_orange_FF7700"
        android:textSize="@dimen/text_size_14" />
</LinearLayout>