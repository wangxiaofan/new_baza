<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="@dimen/dp_5"
    android:paddingBottom="@dimen/dp_5">

    <TextView
        android:id="@+id/tv_recommend_name"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_24"
        android:background="@drawable/right_center_area_bg"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:hint="请选择用户"
        android:maxEms="4"
        android:singleLine="true"
        android:textColor="#4E5968"
        android:textSize="13sp" />

    <LinearLayout
        android:id="@+id/ll_point"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_weight="1"
        android:background="@drawable/right_center_area_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_5">

        <EditText
            android:id="@+id/tv_poine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="number"
            android:maxLength="8"
            android:textColor="#4E5968"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_point_per"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textColor="#4E5968"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:text="*"
        android:textColor="#4E5968"
        android:textSize="13sp" />

    <LinearLayout
        android:id="@+id/ll_value"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_weight="1"
        android:background="@drawable/right_center_area_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_5">

        <EditText
            android:id="@+id/tv_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="number"
            android:maxLength="8"
            android:textColor="#4E5968"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_value_per"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textColor="#4E5968"
            android:textSize="13sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:background="@drawable/btn_tianjia" />

</LinearLayout>