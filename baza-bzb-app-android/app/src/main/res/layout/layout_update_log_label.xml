<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_background_update_log_normal"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_black_333333"
        android:textSize="@dimen/text_size_13" />

    <com.baza.android.bzw.widget.LineBreakLayout
        android:id="@+id/lbl_label_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:horizontalDepart="10dp"
        android:layout_marginTop="10dp"
        app:verticalDepart="10dp" />
</LinearLayout>