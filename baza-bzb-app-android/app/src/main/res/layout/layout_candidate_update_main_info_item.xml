<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_current_value"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/text_color_black_4E5968"
            android:textSize="@dimen/text_size_11" />

        <TextView
            android:id="@+id/tv_updated_value"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/text_color_orange_FF7700"
            android:textSize="@dimen/text_size_11" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/cb_check"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:layout_gravity="right|center_vertical"
        android:background="@null"
        android:button="@null"
        android:drawableLeft="@drawable/checker_update_content"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_10" />

    <View
        android:id="@+id/view_depart_line"
        style="@style/line_horizontal_D3D3D3"
        android:layout_gravity="bottom" />
</FrameLayout>