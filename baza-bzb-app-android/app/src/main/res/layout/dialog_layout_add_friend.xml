<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:text="@string/add_friend_title"
        android:textColor="@color/text_color_black_333333"
        android:textSize="@dimen/text_size_13" />

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/shape_rc_0_nosolid_stoken_grey"
        android:gravity="left|top"
        android:inputType="text"
        android:maxLength="50"
        android:padding="5dp"
        android:textCursorDrawable="@drawable/edit_text_default_cursor"
        android:textColor="@color/text_color_black_666666"
        android:textColorHint="@color/edit_text_hint_color_C0CADB"
        android:textSize="@dimen/text_size_11" />
</LinearLayout>