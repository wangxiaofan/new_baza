<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/resume_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_background_click_default_with_bottom_line"
        android:orientation="vertical"
        android:padding="@dimen/dp_15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                style="@style/style_resume_ele_real_name" />

            <TextView
                android:id="@+id/tv_integrity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_7"
                android:textColor="#FF7700"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_update_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_7"
                android:textColor="#4E5968"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_read_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_7"
                android:textColor="#4E5968"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_resumen_type"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="9sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#697689"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_company_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:drawableLeft="@drawable/icon_company"
            android:drawablePadding="@dimen/dp_5"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="#0D315C"
            android:textSize="@dimen/text_size_10" />

        <TextView
            android:id="@+id/tv_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="5dp"
            android:textColor="#697689"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_college_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:drawableLeft="@drawable/icon_school"
            android:drawablePadding="@dimen/dp_5"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="#0D315C"
            android:textSize="@dimen/text_size_10" />

        <LinearLayout
            android:id="@+id/ll_operate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最近操作"
                android:textColor="#697689"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_operate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="#0D315C"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_flag"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_26"
        android:src="@drawable/icon_inf_find_job" />

    <LinearLayout
        android:layout_width="@dimen/dp_60"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.baza.android.bzw.widget.CircleImageView
            android:id="@+id/user_head"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_15" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="4"
            android:singleLine="true"
            android:textColor="#697689"
            android:textSize="12sp" />

    </LinearLayout>

</FrameLayout>
