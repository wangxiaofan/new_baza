<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7F000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="@dimen/dp_15">
        <!--工作经验-->
        <TextView
            android:id="@+id/tv_years"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="@string/more_filter_workYears_title"
            android:textColor="#53ABD5"
            android:textSize="@dimen/text_size_12" />

        <com.baza.android.bzw.widget.LineBreakLayout
            android:id="@+id/lbl_workYears_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:horizontalDepart="@dimen/dp_10"
            app:verticalDepart="0dp"
            app:lineLimit="3"/>
        <!--学历-->
        <TextView
            android:id="@+id/tv_degree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="@string/more_filter_degree_title"
            android:textColor="#53ABD5"
            android:textSize="@dimen/text_size_12" />

        <com.baza.android.bzw.widget.LineBreakLayout
            android:id="@+id/lbl_degree_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:horizontalDepart="@dimen/dp_10"
            app:verticalDepart="@dimen/dp_10" />

    </LinearLayout>

</LinearLayout>