<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:orientation="vertical">
            <!--工作经验-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/more_filter_workYears_title"
                android:textColor="@color/text_color_black_4E5968"
                android:textSize="@dimen/text_size_12" />

            <com.baza.android.bzw.widget.LineBreakLayout
                android:id="@+id/lbl_workYears_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:horizontalDepart="@dimen/dp_10"
                app:verticalDepart="0dp" />
            <!--学历-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/more_filter_degree_title"
                android:textColor="@color/text_color_black_4E5968"
                android:textSize="@dimen/text_size_12" />

            <com.baza.android.bzw.widget.LineBreakLayout
                android:id="@+id/lbl_degree_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:horizontalDepart="@dimen/dp_10"
                app:verticalDepart="@dimen/dp_10" />
            <!--毕业院校-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/more_filter_school_title"
                android:textColor="@color/text_color_black_4E5968"
                android:textSize="@dimen/text_size_12" />

            <com.baza.android.bzw.widget.LineBreakLayout
                android:id="@+id/lbl_school_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:horizontalDepart="@dimen/dp_10" />
            <!--简历来源-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/more_filter_source_title"
                android:textColor="@color/text_color_black_4E5968"
                android:textSize="@dimen/text_size_12" />

            <com.baza.android.bzw.widget.LineBreakLayout
                android:id="@+id/lbl_source_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:horizontalDepart="@dimen/dp_10"
                app:verticalDepart="@dimen/dp_10" />
            <!--性别-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/more_filter_sex_title"
                android:textColor="@color/text_color_black_4E5968"
                android:textSize="@dimen/text_size_12" />

            <com.baza.android.bzw.widget.LineBreakLayout
                android:id="@+id/lbl_sex_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                app:horizontalDepart="@dimen/dp_10" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="bottom"
        android:background="@drawable/background_default_with_top_line"
        android:orientation="horizontal"
        android:paddingTop="1dp">

        <TextView
            android:id="@+id/tv_clear_filter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_background_click_default"
            android:gravity="center"
            android:text="@string/clear"
            android:textColor="@color/text_color_black_4E5968"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/tv_submit_filter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_background_filter_submit"
            android:gravity="center"
            android:text="@string/sure"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>
</LinearLayout>